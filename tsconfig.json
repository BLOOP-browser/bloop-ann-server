{
  "include": [
    "src/**/*",
    "@types/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": ".",
    "typeRoots": ["./@types"],
    "strict": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
